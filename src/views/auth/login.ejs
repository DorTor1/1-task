<% layout('layout') %>
<h1>Вход</h1>
<form method="post">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
  <div>
    <label>E-mail</label>
    <input name="email" type="email" value="<%= values.email %>" />
    <% if (errors?.email) { %><small class="error"><%= errors.email[0] %></small><% } %>
  </div>
  <div>
    <label>Пароль</label>
    <input name="password" type="password" />
    <% if (errors?.password) { %><small class="error"><%= errors.password[0] %></small><% } %>
  </div>
  <button type="submit">Войти</button>
</form>
<p>Нет аккаунта? <a href="/auth/register">Регистрация</a></p>

