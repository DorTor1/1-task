<% layout('layout') %>
<h1><%= project.name %></h1>
<p><%= project.description || '' %></p>

<h2>Этапы</h2>
<ul>
  <% project.stages.forEach(s => { %>
    <li><%= s.position %>. <%= s.name %></li>
  <% }) %>
</ul>

<form method="post" action="/projects/<%= project.id %>/stages">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
  <input name="name" placeholder="Название этапа" />
  <input name="position" type="number" value="0" />
  <button type="submit">Добавить этап</button>
</form>

<h2>Дефекты</h2>
<ul>
  <% project.defects.forEach(d => { %>
    <li><a href="/defects/<%= d.id %>"><%= d.title %></a> — <%= d.status %></li>
  <% }) %>
</ul>

