<% layout('layout') %>
<h1>Панель управления</h1>
<div class="cards">
  <% const statusMap = { NEW: 'Новая', IN_PROGRESS: 'В работе', IN_REVIEW: 'На проверке', CLOSED: 'Закрыта', CANCELLED: 'Отменена' }; %>
  <% stats.forEach(s => { %>
    <div class="card">
      <div class="card-title"><%= statusMap[s.status] || s.status %></div>
      <div class="card-value"><%= s._count._all %></div>
    </div>
  <% }) %>
</div>

